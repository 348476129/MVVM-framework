<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="adapter"
            type="android.support.v7.widget.RecyclerView.Adapter"/>
        <variable
            name="layoutmanager"
            type="android.support.v7.widget.LinearLayoutManager"/>
        <variable
            name="viewmodel"
            type="com.example.qqq34.mvvmdemo.viewmodel.HomeViewModel"/>
   <variable
       name="refreshListener"
       type="com.example.qqq34.mvvmdemo.callback.SwipeRefreshListener"/>
    </data>

    <android.support.v4.widget.SwipeRefreshLayout
        app:onRefresh="@{refreshListener}"
        app:setRefreshing="@{viewmodel.isRefresh}"
        android:id="@+id/swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            app:adapter="@{adapter}"
            app:layoutManager="@{layoutmanager}"
            android:id="@+id/home_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</layout>